# Prelaunch Options Signals - Environment Configuration

# Analysis Parameters
BASELINE_DAYS=60
SIGNAL_WINDOW_ANNOUNCE=5,20
SIGNAL_WINDOW_RELEASE=5,10

# Statistical Thresholds (Z-scores for volume/price anomaly detection)
Z_THRESHOLD_LOW=1.645   # 95th percentile (one-tailed)
Z_THRESHOLD_MED=2.326   # 99th percentile (one-tailed)
Z_THRESHOLD_HIGH=2.576  # 99% two-tailed / 99.5% one-tailed
Z_THRESHOLD_EXTREME=5.0 # Extreme outliers

# Data Configuration
DATA_DIR=data
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
RESULTS_DIR=results

# Output Settings
SAVE_PLOTS=true
PLOT_DPI=300
PLOT_FORMAT=png

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s %(levelname)s %(message)s

# External APIs (Phase 2)
# POLYGON_API_KEY=your_key_here
# ALPHA_VANTAGE_API_KEY=your_key_here
# YAHOO_FINANCE_COOKIES=your_cookies_here