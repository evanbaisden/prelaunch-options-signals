# Pre-Launch Options Signals - Environment Configuration Template
# Copy this file to .env and fill in your API keys

# Alpha Vantage API Configuration
# Get your free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# API Rate Limiting
ALPHA_VANTAGE_CALLS_PER_MINUTE=5
MAX_RETRIES=3
RETRY_DELAY=12

# Data Paths (modify if needed)
DATA_DIR=data
RESULTS_DIR=results
CACHE_DIR=.cache

# Analysis Parameters
ESTIMATION_WINDOW=120
EVENT_WINDOW_START=-5
EVENT_WINDOW_END=5
MARKET_BENCHMARK=^GSPC

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=analysis.log

# Database Configuration (if using)
# DATABASE_URL=sqlite:///prelaunch_signals.db

# Optional: Yahoo Finance Configuration
# Usually works without API key, but premium features may require:
# YAHOO_FINANCE_API_KEY=your_yahoo_finance_key

# Development Settings
DEBUG=False
VERBOSE_LOGGING=True
SAVE_INTERMEDIATE_RESULTS=True